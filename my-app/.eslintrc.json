{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "babel"
    ],
    "rules": {
        //"no-unused-vars": ["error", { "caughtErrorsIgnorePattern": "^ignore" }],
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": "error",
        "react/prop-types": 0,
        // "linebreak-style": [
        //     "error",
        //     "unix"
        // ],
        "babel/new-cap": 1,
        "babel/camelcase": 1,
        "babel/no-invalid-this": 1,
        "no-unused-vars": "off",
        //"babel/object-curly-spacing": 1,
        "babel/semi": 1,
        "babel/no-unused-expressions": 1,
        "babel/valid-typeof": 1
    },
    "parser": "babel-eslint"
}